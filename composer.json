{
    "name": "ddebin/mc-google-visualization",
    "type": "library",
    "description": "Google Visualization datasource with your own database",
    "keywords": [
        "google",
        "visualization",
        "charts",
        "datasource",
        "database"
    ],
    "homepage": "https://github.com/ddebin/mc-google-visualization",
    "license": "MIT",
    "authors": [
        {
            "name": "Chadwick Morris",
            "email": "chad@mailchimp.com"
        },
        {
            "name": "Damien Debin",
            "email": "damien.debin@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1 || 8.0.*",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MC\\": "lib/MC"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse -l max lib tests",
        "php-cs-fixer": "php-cs-fixer fix --allow-risky=yes",
        "php-cs-fixer-dry-run": "php-cs-fixer fix --dry-run --allow-risky=yes",
        "phpunit": "phpunit"
    }
}
